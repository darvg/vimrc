" Change the titlestring
set titlestring="Firefox"

" Set default search to Google
set defsearch=google

" Open everything in tabs
set newtab=all
set popups=tab

" Casing and Search options
set ignorecase
set incsearch
set smartcase

" Visual Bell
set visualbell

" No toolbars
set toolbars=noaddons,nobookmarks,nomenu,nonavigation

" Make hint links more noticeable and use letters
:highlight Hint font-size:110%;color:white;background-color:blue;padding:2px;
:set hintchars=asdfghjkl

" Navigation bindings
inoremap jj <Esc>
noremap j 5j
noremap k 5k
noremap x d
noremap d <C-d>
noremap u <C-u>
noremap K <C-p>
noremap J <C-n>
noremap + :open javascript:q=location.href;p=document.title;void(t=open('https://pinboard.in/add?later=yes&noui=yes&jump=close&url='+encodeURIComponent(q)+'&title='+encodeURIComponent(p),'Pinboard','toolbar=no,width=100,height=100'));t.blur();<Cr>
noremap = :open javascript:q%3Dlocation.href%3Bif(document.getSelection)%7Bd%3Ddocument.getSelection()%3B%7Delse%7Bd%3D%27%27%3B%7D%3Bp%3Ddocument.title%3Bvoid(open(%27https://pinboard.in/add%3Furl%3D%27%2BencodeURIComponent(q)%2B%27%26description%3D%27%2BencodeURIComponent(d)%2B%27%26title%3D%27%2BencodeURIComponent(p),%27Pinboard%27,%27toolbar%3Dno,width%3D700,height%3D350%27))%3B<Cr>
